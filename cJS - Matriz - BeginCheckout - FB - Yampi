function() {           
  var products = {{DLV - items}}; // matriz de produtos no padrão FB  
  var tam = products.length;
  var indice = 0;
  
  // Adiciona o primeiro item à matriz
  var viarray = [{
    "id": products[indice].shopify_variant_id,
    "title": products[indice].name,
    "brand": products[indice].brand.name,    
    "quantity": products[indice].quantity,
    "item_price": parseFloat(products[indice].price) // Converte o preço para número
  }];
  
  tam = tam - 1;
 
  // Loop pelos itens restantes
  while (tam != 0) {
    indice = indice + 1;
    viarray.push({
      "id": products[indice].shopify_variant_id,
      "title": products[indice].name,
      "item_brand": products[indice].brand.name,     
      "quantity": products[indice].quantity,
      "item_price": parseFloat(products[indice].price) // Converte o preço para número
    });
    tam = tam - 1;
  }
  
  return viarray;
}
